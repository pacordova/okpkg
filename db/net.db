   sha3 = "05a6c3e7f6928b0455e13e5167f455c1a7d9162cf394d415e6c48da7c49d8eec",
   build = "./configure",
   flags = { "--with-privsep-user=ntp" }
};

openresolv = {
   url = "https://github.com/NetworkConfiguration/openresolv/releases/download/v3.15.0/openresolv-3.15.0.tar.xz",
   sha3 = "7d41e3f5a574d384f9d4600b61a41015fd4723452696290ea0972172570b6540",
   build = "./configure",
   flags = { 
      "--libdir=/usr/lib64", 
      "--libexecdir=/usr/lib64", 
