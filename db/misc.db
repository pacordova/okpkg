      install -t $destdir/usr/lib64/7zip CPP/7zip/Bundles/Alone/b/g/7za
      install -t $destdir/usr/lib64/7zip CPP/7zip/Bundles/Alone7z/b/g/7zr
      install -t $destdir/usr/lib64/7zip CPP/7zip/Bundles/Format7zF/b/g/7z.so
      install -t $destdir/usr/lib64/7zip CPP/7zip/UI/Console/b/g/7z
      install CPP/7zip/Bundles/SFXCon/b/g/7zCon $destdir/usr/lib64/7zip/7zCon.sfx
      for i in 7z 7za 7zr; do
         printf '#!/bin/sh\nexec /usr/lib64/7zip/%s "$@"' $i > _
         install _ $destdir/usr/bin/$i
      done
   ]]
};

