   sha3 = "3087dfc747e0ae962cfa226f093aa74b4badd7c2288b7210e8bfd52effe9f83d",
   build = _,
   post = [[
      rm -fr * && tar -xf ../../download/7z2600-src.tar.xz
      for i in Bundles/{Alone,Alone7z,Format7zF,SFXCon} UI/Console; do
         make -C CPP/7zip/$i -f ../../cmpl_gcc.mak
